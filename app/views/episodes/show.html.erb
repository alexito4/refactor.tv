<div class="episode-header">
  <a href="<%= episode_url(@episode) %>" title="Episode #<%= @episode.position %>: <%= @episode.title %>"><img src="http://assets.refactor.tv/episodes/Episode<%= @episode.position.to_s.rjust(3, '0') %>-Poster.png" alt="Episode #<%= @episode.position %>: <%= @episode.title %>" width="150" height="150" /></a>
  <div>
    <h2>Episode #<%= @episode.position %> <span><%= @episode.title %></span></h2>
    <p><%= @episode.summary %></p>
  </div>
</div>

<h3>Download</h3>
<ul style="margin-bottom:3em">
  <% @episode.episode_files.order('size DESC').each do |file| %>
  <li><%= link_to file.display_name, file.url %></li>
  <% end %>
</ul>

<h3>Show Notes</h3>
<div id="notes"><%= @episode.notes_html.html_safe %></div>

<p><%= follow_button 'refactortv' %></p>

<p><%= link_to '&larr; All episodes'.html_safe, root_url %></p>
